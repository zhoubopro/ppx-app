{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        // "navigationBarTitleText": "index-app"
        "app-plus": {
          "scrollIndicator": "none",
          "bounce":"none", //关闭反弹效果
          // 隐藏滚动条
          "titleNView": {
            "searchInput": {
              "align": "center",
              "backgroundColor": "#F7F7F7",
              "borderRadius": "4px",
              "placeholder": "搜索糗事",
              "placeholderColor": "#CCCCCC",
              "disabled": true
            },
            "buttons": [
              {
                "color": "#FF9619",
                "colorPressed": "#CCCCCC",
                "float": "left",
                "fontSrc": "/static/font/iconfont.ttf",
                "text": "\ue609"
              },
              {
                "color": "#000000",
                "colorPressed": "#CCCCCC",
                "float": "right",
                "fontSrc": "/static/font/iconfont.ttf",
                "text": "\ue653"
              }
            ]
          }
        }
      }
    },
    {
      "path": "pages/dynamic/dynamic",
      "style" : {
        "app-plus":{
          "titleNView":false,
          "bounce":"none"//关闭反弹效果
        }
      }
    },
    {
      "path": "pages/paper/paper",
      "style": {}
    },
    {
      "path": "pages/home/home",
      "style": {}
    },
    {
      "path": "pages/live/live",
      "style": {}
    },
    {
      "path": "pages/demo/demo",
      "style": {
        "navigationBarTitleText": "Demo"
      }
    },
    {
      "path": "pages/search/search",
      "style": {
        "app-plus": {
          "scrollIndicator": "none",
          "titleNView": {
            "autoBackButton": false,
            "searchInput": {
              "align": "left",
              "backgroundColor": "#F7F7F7",
              "borderRadius": "4px",
              "placeholder": "搜索糗事",
              "placeholderColor": "#CCCCCC"
            },
            "buttons": [
              {
                "color": "#000000",
                "colorPressed": "#CCCCCC",
                "float": "right",
                "fontSize": "16px",
                "text": "取消"
              }
            ]
          }
        }
      }
    },
    {
      "path": "pages/release/release",
      "style": {
        "app-plus": {
          "animationType": "slide-in-bottom",
          "animationDuration": 200,
          // 禁止原生导航
          "titleNView": false
        }
      }
    }
    ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "ppx-app",
    "navigationBarBackgroundColor": "#FFFFFF",
    "backgroundColor": "#FFFFFF"
  },
  "tabBar": {
    "color": "#ADADAD",
    "selectedColor": "#FEE42B",
    "backgroundColor": "#FFFFFF",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/tabbar/index.png",
        "selectedIconPath": "static/tabbar/index-active.png",
        "text": "糗事"
      },
      {
        "pagePath": "pages/dynamic/dynamic",
        "iconPath": "static/tabbar/dynamic.png",
        "selectedIconPath": "static/tabbar/dynamic-active.png",
        "text": "动态"
      },
      {
        "pagePath": "pages/live/live",
        "iconPath": "static/tabbar/live.png",
        "selectedIconPath": "static/tabbar/live-active.png",
        "text": "直播"
      },
      {
        "pagePath": "pages/paper/paper",
        "iconPath": "static/tabbar/paper.png",
        "selectedIconPath": "static/tabbar/paper-active.png",
        "text": "纸条"
      },
      {
        "pagePath": "pages/home/home",
        "iconPath": "static/tabbar/home.png",
        "selectedIconPath": "static/tabbar/home-active.png",
        "text": "我的"
      }
    ]
  }
}
